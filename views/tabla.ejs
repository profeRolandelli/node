<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/1ad6ac593c.js" crossorigin="anonymous"></script>

</head>

<body>
    <!-- Button trigger modal -->
    <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
  </button> -->

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center bg-ligth">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                </div>
            </div>
        </div>
    </div>




    <header>
        <!-- place navbar here -->
        <!-- <i class="fa-solid fa-trash"></i>
        <i class="fa-solid fa-eye"></i> -->

    </header>
    <main>
        <div class="row">

            <div class="col-12 d-flex justify-content-center">
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-pills w-100">
                            <li class="nav-pill active">
                                <a class="nav-link">CURSOS </a>
                            </li>
                            <li class="nav-pill ml-auto">
                                <a class="nav-link active" href="/AgregarUsuario">Agregar Curso</a>
                            </li>
                        </ul>
                    </div>


                    <div class="card-body">


                        <table class="table table-success table-striped w-auto">
                            <thead>
                                <tr>
                                    <th scope="col">Nro</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Autor</th>
                                    <th scope="col">Costo</th>
                                    <th scope="col">Foto</th>                                    
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="cuerpo">
                                <% for(let i=0; i< results.length ; i++ ){ %>
                                    <tr>
                                        <td id="tddni">
                                            <%= results[i].idCurso %>
                                        </td>
                                        <td id="tdnombre">
                                            <%= results[i].nombreCurso %>
                                        </td>
                                        <td id="tdapellido">
                                            <%= results[i].autor %>
                                        </td>
                                        <td id="tdespecialidad">
                                            <%= results[i].precio %>
                                        </td>
                                        <td id="tdfile">

                                          <img src="<%= results[i].imagen %>" alt="Foto" style="width: 50px; height: 50px;">  
                                        </td>
                                        
                                        <td>
                                            <a href="#" > <i class="fa-solid fa-edit editar"></i></a>
                                            <a href="/borrarCurso/<%= results[i].idCurso %>" onclick="return confirm('Desea Borrar este Curso?')"> <i class="fa-solid fa-trash px-2 borrar"> </a></i> 
                                            <a href="#"> <i class="fa-solid fa-eye ver"></i> </a>
                                        
                                        </td>
                                    </tr>
                                    <% } %>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>



    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script src="app.js"></script>

</body>

</html>